MainWindow #tasks {
    width: 29;
}
ActionLabel {
    border: solid $text-accent;
    color: $text-primary;
    min-width: 10;
}

Task {
    border: blank;
    color: $text-secondary;
    min-width: 15;
    min-height: 1;
}

Task:hover {
    border:  solid $text-accent;
}
Task:focus {
    border:  solid $text-primary;
}


#stop {
    dock: left;
    display: none;
}

#start {
    dock: left;
    display: none;
}
